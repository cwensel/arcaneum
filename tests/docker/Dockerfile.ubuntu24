# Dockerfile for testing Arcaneum installation on Ubuntu 24.04 LTS
FROM ubuntu:24.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Update and install basic dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    ca-certificates \
    gnupg \
    lsb-release \
    bc \
    && rm -rf /var/lib/apt/lists/*

# Install Python 3.12 (available by default in Ubuntu 24.04)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-venv \
    python3-dev \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Create python symlink for convenience
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3 1

# Install system dependencies for Arcaneum (OCR and PDF processing)
RUN apt-get update && apt-get install -y \
    tesseract-ocr \
    tesseract-ocr-eng \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Install Docker CLI (needed for arc container commands)
# The daemon will be accessed via mounted socket from host
RUN install -m 0755 -d /etc/apt/keyrings && \
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg && \
    chmod a+r /etc/apt/keyrings/docker.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
    $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null && \
    apt-get update && \
    apt-get install -y docker-ce-cli && \
    rm -rf /var/lib/apt/lists/*

# Create a non-root user for testing
RUN useradd -m -s /bin/bash tester

# Set working directory
WORKDIR /home/tester

# Copy arcaneum source code
COPY --chown=tester:tester . /home/tester/arcaneum

# Switch to non-root user
USER tester

# Upgrade pip (--break-system-packages is safe in Docker container)
RUN python3 -m pip install --user --upgrade pip setuptools wheel --break-system-packages

# Copy test script
COPY --chown=tester:tester tests/docker/test-installation.sh /home/tester/test-installation.sh
RUN chmod +x /home/tester/test-installation.sh

# Set environment variables
ENV PATH="/home/tester/.local/bin:${PATH}"
ENV PYTHONUNBUFFERED=1

# Run the test script by default
CMD ["/home/tester/test-installation.sh"]
